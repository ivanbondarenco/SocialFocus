{
    "manifest_version": 3,
    "name": "Social Focus - Bloqueador de Distracciones",
    "version": "1.0",
    "description": "Bloquea redes sociales, limita X (Twitter) a 20 min/d√≠a y limpia YouTube.",
    "permissions": [
        "storage",
        "tabs",
        "alarms"
    ],
    "host_permissions": [
        "*://*.facebook.com/*",
        "*://*.instagram.com/*",
        "*://*.tiktok.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.reddit.com/*",
        "*://*.snapchat.com/*",
        "*://*.linkedin.com/*",
        "*://*.youtube.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "css": [
                "content_youtube.css"
            ],
            "js": [
                "content_youtube.js"
            ],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "blocked.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "socialfocus@example.com",
            "strict_min_version": "109.0"
        }
    }
}